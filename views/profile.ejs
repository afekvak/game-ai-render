<%- include('partials/head') %>
<body>
    <%- include('partials/navbar') %>

    <div class="profile-container">
        <% if (user) { %>
            <h2>ğŸ‘¤ Your Profile</h2>
            <img src="<%= user.profilePicture || '/images/default-profile.png' %>" class="profile-picture">
            <h3><%= user.username %></h3>
            <p><%= user.email %></p>

            <!-- ğŸ”¹ Update Profile Form -->
            <form action="/profile/update-photo" method="POST">
                <input type="url" name="photoUrl" placeholder="ğŸ”— Link to a Profile Picture" required>
                <button type="submit">Update Photo</button>
            </form>

            <form action="/profile/update-info" method="POST">
                <input type="text" name="username" placeholder="âœï¸ New Username" required>
                <button type="submit">Update Username</button>
            </form>

            <form action="/profile/update-password" method="POST">
                <input type="password" name="password" placeholder="ğŸ”‘ New Password" required>
                <button type="submit">Update Password</button>
            </form>

            <!-- ğŸ® Last Visited Games -->
            <div class="recent-games">
                <h4>ğŸ® Last Viewed Games</h4>
                <ul>
                    <% if (user.recentGames && user.recentGames.length > 0) { %>
                        <% user.recentGames.forEach(game => { %>
                            <li class="game-item">
                                <a href="/games/game-info/<%= game.id %>">
                                    <img src="<%= game.image %>" class="game-image">
                                    <span><%= game.name %></span>
                                </a>
                            </li>
                        <% }); %>
                    <% } else { %>
                        <li>ğŸ” No last viewed games</li>
                    <% } %>
                </ul>
            </div>

            <!-- â­ User Ratings -->
            <div class="ratings-container">
                <h4>â­ Your Ratings</h4>
                <ul>
                    <% if (ratings && ratings.length > 0) { %>
                        <% ratings.forEach(rating => { %>
                            <li class="rating-item">
                                ğŸ® <strong>Game:</strong> <%= rating.gameName || "Unknown Game" %> | â­ Rating: <%= rating.rating %>
                                <form action="/profile/remove-rating" method="POST">
                                    <input type="hidden" name="ratingId" value="<%= rating._id %>">
                                    <button type="submit" class="delete-btn">ğŸ—‘ï¸ Delete</button>
                                </form>
                            </li>
                        <% }); %>
                    <% } else { %>
                        <li>ğŸ” You haven't rated any games yet</li>
                    <% } %>
                </ul>
            </div>
        <% } else { %>
            <p>ğŸ”’ You must be logged in to view your profile <a href="/login">Login</a></p>
        <% } %>
    </div>

    <%- include('partials/footer') %>
</body>
</html>
